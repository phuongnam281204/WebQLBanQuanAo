@model MvcBookStore.Models.Loai

@{
    ViewBag.Title = "SuaLoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>SuaLoai</h2>

@using (Html.BeginForm("Suasach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="control-label col-md-2">Tên thể loại:</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        
        
        

        <div class="form-group">
            <span class="control-label col-md-2">Loại quần áo:</span>
            <div class="col-sm-12">
                @Html.DropDownList("MaLoai")
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <span class="control-label col-md-2">Hãng quần áo:</span>
            <div class="col-sm-12">
                @Html.DropDownList("MaNXB")
            </div>
        </div>
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Sửa" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>


