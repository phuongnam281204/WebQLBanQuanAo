                <div class="row">
                    <div class="col-lg-5 col-md-6 col-12">
                        <!-- Single Widget -->
                        <div class="single-footer about">
                            <div class="logo">
                                <a href="@Url.Action("Index","BookStore")"><img src="~/images/Buma-logo (1).png" alt="#"></a>
