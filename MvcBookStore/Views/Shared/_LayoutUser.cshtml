        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Header -->
    <header class="header shop">
        <!-- Topbar -->
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-12">
                        <!-- Top Left -->
                        <div class="top-left">
                            <ul class="list-main">
                                <li><i class="ti-headphone-alt"></i> 190 063 6467</li>
                                <li><i class="ti-email"></i> cskh@Buma.com.vn</li>
                            </ul>
                        </div>
                        <!--/ End Top Left -->
                    </div>
                    <div class="col-lg-7 col-md-12 col-12">
                        <!-- Top Right -->
                        <div class="right-content">
                            <ul class="list-main">
                                <li><i class="ti-location-pin"></i>60 - 62 Lê Lợi, Quận 1, TP. HCM, Việt Nam</li>
                                @if (Session["Taikhoan"] == null || Session["Taikhoan"].ToString() == "")
                                {
                                    <li><i class="ti-user"></i>Khách</li>
                                    <li>
                                        <i class="ti-pencil-alt"></i>
                                        <a href="@Url.Action("Dangnhap","Nguoidung")">Đăng Nhập</a>
                                    </li>
                                    <li><i class="ti-power-off"></i><a href="@Url.Action("Dangky","Nguoidung")">Đăng Ký</a></li>
                                }
                                else
                                {
                                    <li><i class="ti-user"></i>@Session["TDN"].ToString()</li>
                                    <li><i class="ti-power-off"></i><a href="@Url.Action("Thoat","BookStore")">Thoát</a></li>
                                }

                            </ul>
                        </div>
                        <!-- End Top Right -->
                    </div>
                </div>
            </div>
        </div>
        <!-- End Topbar -->
        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <!-- Logo -->
                        <div class="logo">
                            <a href="@Url.Action("Index","BookStore")"><img src="~/images/anhsp/logoquanao.png" alt="logo"></a>
                        </div>
                        <!--/ End Logo -->
                        <!-- Search Form -->
                        <div class="search-top">
                            <div class="top-search"><a href="#0"><i class="ti-search"></i></a></div>
                            <!-- Search Form -->
                            <div class="search-top">
                                <form class="search-form">
                                    <input type="text" placeholder="Search here..." name="search">
                                    <button value="search" type="submit"><i class="ti-search"></i></button>
                                </form>
                            </div>
                            <!--/ End Search Form -->
                        </div>
                        <!--/ End Search Form -->
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar">
                                <select>
                                    <option selected="selected">Danh Mục</option>
                                    <option>Nhà sản xuất</option>
                                    <option>Tên quần áo</option>
                                    <option>Loại quần áo</option>
                                </select>
                                <form>
                                    <input name="search" placeholder="Nhập thông tin tìm kiếm....." type="search">
                                    <button class="btnn"><i class="ti-search"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <!-- Search Form -->
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar">
                                <a href="#" class="single-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                            </div>
                            <div class="sinlge-bar shopping">
                                <a href="@Url.Action("Giohang","Giohang")" class="single-icon"><i class="ti-bag"></i>@if (ViewBag.Tongsoluong != null)
                                {<span class="total-count">@ViewBag.Tongsoluong</span>}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-9 col-12">
                            <div class="menu-area">
                                <!-- Main Menu -->
                                <nav class="navbar navbar-expand-lg">
                                    <div class="navbar-collapse">
                                        <div class="nav-inner">
                                            <ul class="nav main-menu menu navbar-nav">
                                                <li class="active"><a href="@Url.Action("Index","BookStore")">Trang Chủ</a></li>
                                                <li>
                                                    @Html.Action("Loai", "BookStore")
                                                </li>
                                                <li>
                                                    @Html.Action("Nhaxuatban", "BookStore")
                                                </li>
                                                <li><a href="#">Top Bán Chạy<span class="new">New</span></a></li>
                                                <li><a href="#">quần áo Cũ</a></li>
                                                
                                                <li><a href="hoitro.html">Hỗ Trợ</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </nav>
                                <!--/ End Main Menu -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Header Inner -->
    </header>
    <!--/ End Header -->
    <!-- Slider Area -->
    <section class="hero-slider text-right">
        <!-- Single Slider -->
        <style>
            .hero-slider .banner-slider {
                background-image: url('../../images/4069490.jpg');
                background-size: contain;
                background-position: center center;
                background-repeat: no-repeat;
            }
        </style>

        <div class="hero-slider banner-slider">
            <div class="container">
                <div class="row no-gutters">
                    <div class="col-12">
                        <div class="text-inner">
                            <div class="row">
                                <div class="col-12">
                                    <div class="hero-text">
                                        <div class="button">
                                            <a href="#" class="btn">Xem Thêm</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Single Slider -->
    </section>
    <!--/ End Slider Area -->
    <!-- Start Product Area -->
    <div class="product-area section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="shop-services section home">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="ti-rocket"></i>
                        <h4>Free shiping</h4>
                        <p>Với đơn hàng trên 200.000VNĐ</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="ti-reload"></i>
                        <h4>Miễn Phí Đổi Trả</h4>
                        <p>Đổi hàng khi bị lỗi</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="ti-lock"></i>
                        <h4>Bảo Mật</h4>
                        <p>Bảo mật giao hàng</p>
                    </div>
                    <!-- End Single Service -->
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <!-- Start Single Service -->
                    <div class="single-service">
                        <i class="ti-tag"></i>
                        <h4>Siêu Tiết Kiệm</h4>
                        <p>Mua hàng giá rẻ</p>
                    </div>
                    <!-- End Single Service -->
                </div>
            </div>
        </div>
    </section>
    <section class="shop-newsletter section">
        <div class="container">
            <div class="inner-top">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2 col-12">
                        <!-- Start Newsletter Inner -->
                        <div class="inner">
                            <h4><i class="ti-email"></i> ĐĂNG KÝ NHẬN BẢN TIN</h4>
                            <form action="mail/mail.php" method="get" target="_blank" class="newsletter-inner">
                                <input name="EMAIL" placeholder="Địa chỉ Email của bạn ..." required="" type="email">
                                <button class="btn">Đăng Kí</button>
                            </form>
                        </div>
                        <!-- End Newsletter Inner -->
                    </div>
                </div>
            </div>
        </div>
